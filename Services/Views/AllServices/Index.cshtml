


@{
    ViewBag.Title = "AllServices";
}

@model IEnumerable < Services.businessLogic.Service >
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@Html.ValidationSummary()
<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm())
{
    <p>
        Find by name: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>
            @Html.ActionLink("UnitPrice", "Index", new { sortOrder = ViewBag.UnitSortParm })
        </th>
        <th>
            @Html.ActionLink("NetPrice", "Index", new { sortOrder = ViewBag.NetSortParm })
        </th>
        <th>
            @Html.ActionLink("Vat", "Index", new { sortOrder = ViewBag.VatSortParm })
        </th>
        <th>
            @Html.ActionLink("VatAmount", "Index", new { sortOrder = ViewBag.VatAmountSortParm })
        </th>
        <th>
            @Html.ActionLink("PretaxPrice", "Index", new { sortOrder = ViewBag.PretaxSortParm })
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NetPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VatAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PretaxPrice)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>

